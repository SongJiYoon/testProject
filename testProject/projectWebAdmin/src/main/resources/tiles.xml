<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE tiles-definitions PUBLIC
       "-//Apache Software Foundation//DTD Tiles Configuration 3.0//EN"
       "http://tiles.apache.org/dtds/tiles-config_3_0.dtd">

<tiles-definitions>
	<definition name="error/*.html" template="/WEB-INF/view/common/layout/common_template.jsp">
		<put-attribute name="title" value="구몬 통합관리자"/>
		<put-attribute name="bodyClass" value="error"/>
		<put-attribute name="mainArea" value="/WEB-INF/view/common/error/{1}.jsp"/>
	</definition>

	<definition name="login/*.html" template="/WEB-INF/view/common/layout/common_template.jsp">
		<put-attribute name="title" value="구몬 통합관리자"/>
		<put-attribute name="bodyClass" value="login"/>
		<put-attribute name="mainArea" value="/WEB-INF/view/common/login/{1}.jsp"/>
	</definition>    
    
	<definition name="*.html" template="/WEB-INF/view/common/layout/frame_template.jsp">
		<put-attribute name="title" value="구몬ICT 통합관리자"/>
		<put-attribute name="leftArea" value="/WEB-INF/view/common/left/{1}.jsp"/>
	</definition>

	<definition name="*/*/*.html" template="/WEB-INF/view/common/layout/main_template.jsp">
		<put-attribute name="title" value="구몬ICT 통합관리자"/>
		<put-attribute name="mainArea" value="/WEB-INF/view/{1}/{2}/{3}.jsp"/>
	</definition>
</tiles-definitions>
